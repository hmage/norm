#!/bin/bash

depends_on libgpg-error
depends_on libassuan

fetch_source https://www.gnupg.org/ftp/gcrypt/pinentry/pinentry-1.0.0.tar.bz2 85d9ac81ebad3fb082514c505c90c39a0456f1f6

CONFOPTS=(
--disable-pinentry-qt
--disable-pinentry-qt4
--disable-pinentry-qt5
--disable-pinentry-gnome3
--disable-pinentry-curses
--disable-pinentry-gtk2
--enable-pinentry-tty
--disable-libsecret
--without-libcap
)

do_unpack_compile "${CONFOPTS[@]}"
