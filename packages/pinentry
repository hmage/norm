#!/bin/bash

depends_on libgpg-error
depends_on libassuan
depends_on libncurses

fetch_source https://www.gnupg.org/ftp/gcrypt/pinentry/pinentry-1.3.2.tar.bz2 ca7c502f347f248377842f7e68df5e971059e4db

CONFOPTS=(
--disable-pinentry-qt
--disable-pinentry-qt4
--disable-pinentry-qt5
--disable-pinentry-gnome3
--enable-pinentry-curses
--disable-pinentry-gtk2
--enable-pinentry-tty
--disable-libsecret
--without-libcap
)

do_unpack_compile "${CONFOPTS[@]}"
