#!/bin/bash

fetch_source https://github.com/facebook/zstd/releases/download/v1.4.3/zstd-1.4.3.tar.gz cadf7943c2df697e2350b3e6e3d156e5351519dc

MAKEFLAGS=(
PREFIX="$ESCAPED_PREFIX"
HAVE_ZLIB=0 ## opportunistic linking otherwise
HAVE_LZMA=0 ## opportunistic linking otherwise
HAVE_LZ4=0  ## opportunistic linking otherwise
)

do_unpack
pushd_src
do_make -C lib "${MAKEFLAGS[@]}"
do_test "${MAKEFLAGS[@]}"
do_install "${MAKEFLAGS[@]}"
popd_src
