#!/bin/bash

depends_on zlib ## opportunistic linking
depends_on libgpg-error
depends_on libgcrypt
depends_on libassuan
depends_on libksba
depends_on libnpth
depends_on pinentry

fetch_source https://gnupg.org/ftp/gcrypt/gnupg/gnupg-2.3.4.tar.bz2 436823f57b8387ece6053d9a395374243d64feff

do_unpack_compile --with-pinentry-pgm="$PREFIX/bin/pinentry"
