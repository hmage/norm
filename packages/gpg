#!/bin/bash

depends_on zlib ## opportunistic linking
depends_on libgpg-error
depends_on libgcrypt
depends_on libassuan
depends_on libksba
depends_on libnpth
depends_on pinentry

fetch_source https://gnupg.org/ftp/gcrypt/gnupg/gnupg-2.3.3.tar.bz2 b19a407076424704f1b00e8265254de1b3061659

do_unpack_compile --with-pinentry-pgm="$PREFIX/bin/pinentry"
