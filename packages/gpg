#!/bin/bash

depends_on zlib ## opportunistic linking
depends_on libgpg-error
depends_on libgcrypt
depends_on libassuan
depends_on libksba
depends_on libnpth
depends_on pinentry

fetch_source https://gnupg.org/ftp/gcrypt/gnupg/gnupg-2.3.2.tar.bz2 f0f44b29e3702d3be1b25c964dfc2aaefe70e2fc

do_unpack_compile --with-pinentry-pgm="$PREFIX/bin/pinentry"
