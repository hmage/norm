#!/bin/bash

depends_on zlib ## opportunistic linking
depends_on libgpg-error
depends_on libgcrypt
depends_on libassuan
depends_on libksba
depends_on libnpth
depends_on pinentry

fetch_source https://gnupg.org/ftp/gcrypt/gnupg/gnupg-2.2.19.tar.bz2 e24a1208ffe69d7436b2f27e99542a85f34d0ac0

do_unpack_compile --with-pinentry-pgm="$PREFIX/bin/pinentry"
