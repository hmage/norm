#!/bin/bash

depends_on zlib ## opportunistic linking
depends_on libgpg-error
depends_on libgcrypt
depends_on libassuan
depends_on libksba
depends_on libnpth
depends_on pinentry

fetch_source https://gnupg.org/ftp/gcrypt/gnupg/gnupg-2.2.21.tar.bz2 4af4c6fe5f9dd7d866243f715b32775500468943

do_unpack_compile --with-pinentry-pgm="$PREFIX/bin/pinentry"
