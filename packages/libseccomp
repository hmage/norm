#!/bin/bash

if ! test_cc_value asm/bitsperlong.h __BITS_PER_LONG; then
    log "libseccomp requires linux kernel headers that have asm/bitsperlong.h"
    false
fi

needs_tool gperf

fetch_source https://github.com/seccomp/libseccomp/releases/download/v2.5.3/libseccomp-2.5.3.tar.gz 9b2b352ba73123181c6a2500777efc5d3592acb6

do_unpack_compile
