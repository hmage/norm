#!/bin/bash

fetch_source http://ftpmirror.gnu.org/make/make-4.3.tar.gz 3c40e5b49b893dbb14f1e2e1f8fe89b7298cc51d

do_unpack
pushd_src
do_configure
## __alloca is no longer in libc
sed -i.bak 's/__alloca/alloca/g' glob/glob.c
sh ./build.sh
mkdir -p "$PREFIX/bin"
install -m 755 make "$PREFIX/bin"
do_install
popd_src
