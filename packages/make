#!/bin/bash

fetch_source http://ftpmirror.gnu.org/make/make-4.2.1.tar.gz 9cb7f45f6e32c977164ba790e626c359d3a24fee

do_unpack
pushd_src
do_configure
## __alloca is no longer in libc
sed -i.bak 's/__alloca/alloca/g' glob/glob.c
sh ./build.sh
mkdir -p "$PREFIX/bin"
install -m 755 make "$PREFIX/bin"
do_install
popd_src
