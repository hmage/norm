#!/bin/bash

needs_tool pkg-config ## to find libboost and openssl

depends_on libboost
depends_on openssl

fetch_source https://github.com/arvidn/libtorrent/releases/download/libtorrent-1_2_3/libtorrent-rasterbar-1.2.3.tar.gz ca0f0e018115388db7a40aab1a9a472b43047608

do_unpack_compile --with-boost="$PREFIX"
