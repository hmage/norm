#!/bin/bash

needs_tool pkg-config ## to find libboost and openssl

depends_on libboost
depends_on openssl

fetch_source https://github.com/arvidn/libtorrent/releases/download/libtorrent_1_2_7/libtorrent-rasterbar-1.2.7.tar.gz b52ff2709e0b2e58f1f06e31c291ca3a652e466c

do_unpack_compile --with-boost="$PREFIX"
