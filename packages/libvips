#!/bin/bash

depends_on glib     ## uses gobject-introspection
[[ $OSTYPE != *darwin* ]] && depends_on libexpat ## what for? also on osx it's always there, don't build our own

## image formats
depends_on libpng
depends_on libjpeg
depends_on libheif
depends_on libtiff
depends_on libwebp
depends_on libexif

fetch_source https://github.com/libvips/libvips/releases/download/v8.8.0/vips-8.8.0.tar.gz 4fd729ae09d01679905fb979552e41212904cb1d

do_unpack_compile
