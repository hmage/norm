#!/bin/bash

depends_on zlib ## opportunistic linking

fetch_source https://gitlab.com/api/v4/projects/4207231/packages/generic/graphviz-releases/2.49.0/graphviz-2.49.0.tar.xz e7b56c68709f0793a012faec98aa94b5eb57d1bc

CONFOPTS=(
--with-included-ltdl ## opportunistic linking with libltdl.so otherwise
--without-expat      ## opportunistic linking with libexpat.so
PS2PDF=true
)

do_unpack_compile "${CONFOPTS[@]}"
