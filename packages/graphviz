#!/bin/bash

depends_on zlib ## opportunistic linking

fetch_source https://gitlab.com/api/v4/projects/4207231/packages/generic/graphviz-releases/2.50.0/graphviz-2.50.0.tar.xz 91aa2871fbf78e42f61cee54a049dabbcf6f1d1f

CONFOPTS=(
--with-included-ltdl ## opportunistic linking with libltdl.so otherwise
--without-expat      ## opportunistic linking with libexpat.so
PS2PDF=true
)

do_unpack_compile "${CONFOPTS[@]}"
