#!/bin/bash

fetch_source https://gitlab.com/graphviz/graphviz/-/archive/5.0.1/graphviz-5.0.1.tar.bz2 bf2b81080af52119d2d8e1eaf19a299c68bd964e

CONFOPTS=(
--with-included-ltdl  ## opportunistic linking with libltdl.so otherwise
--without-expat       ## opportunistic linking with libexpat.so
--without-libgd       ## opportunistic linking with libgd
--without-gts         ## opportunistic linking with libgts
--without-rsvg        ## opportunistic linking with librsvg
--without-pangocairo  ## opportunistic linking with libpangocairo
--without-ghostscript ## opportunistic linking with libgs
--without-poppler     ## opportunistic linking with libpoppler
--without-webp        ## opportunistic linking iwth libwebp
PS2PDF=true
)

do_unpack_compile "${CONFOPTS[@]}"
