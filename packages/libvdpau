#!/bin/bash

depends_on autoconf automake libtool
depends_on pkg-config
depends_on libx11
depends_on libxext

fetch_source http://http.debian.net/debian/pool/main/libv/libvdpau/libvdpau_1.1.1.orig.tar.bz2 86516e2a962fd34f65d49115d6ddf15fd912f579
fetch_debian http://http.debian.net/debian/pool/main/libv/libvdpau/libvdpau_1.1.1-6.debian.tar.xz e9d7dc1363c26ce945c842e08f79392e82c37aa2

do_undebian
do_autoreconf
do_compile
