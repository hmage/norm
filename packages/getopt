#!/bin/bash

depends_on gettext

fetch_source http://frodo.looijaard.name/system/files/software/getopt/getopt-1.1.6.tar.gz 98725b4878d19ab6b126cd16263fed1f6090f6a7

do_unpack
pushd_src
sed -ibak "s|^CPPFLAGS=|CPPFLAGS=-I${PREFIX}/include |" Makefile
sed -ibak "s|^LDFLAGS=|LDFLAGS=-L${PREFIX}/lib -lintl |" Makefile
do_make
do_install prefix="$PREFIX" mandir="$PREFIX/share/man"
popd_src
