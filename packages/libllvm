#!/bin/bash

requires_gcc 4.7

depends_on zlib
depends_on libncurses
depends_on python

fetch_source http://llvm.org/releases/3.7.0/llvm-3.7.0.src.tar.xz 0355c2fe01a8d17c3315069e6f2ef80c281e7dad

do_unpack

CC=gcc CXX=g++ \
do_compile_outside --disable-assertions --enable-optimized --enable-targets=host \
                   --enable-shared --disable-libedit
