#!/bin/bash

depends_on pkg-config
depends_on glib
depends_on libatk
depends_on libpango
depends_on libcairo
depends_on gdk-pixbuf
depends_on libxi
depends_on libepoxy
depends_on libat-spi2-atk
depends_on libxinerama
depends_on libxrandr
depends_on libxcursor
depends_on libxcomposite
depends_on libxkbcommon
depends_on libwayland

fetch_source http://ftp.gnome.org/pub/gnome/sources/gtk+/3.22/gtk+-3.22.7.tar.xz 7c8949f786d6c77c04d4789a4f611573e8584de1

do_unpack_compile --disable-cloudprint --disable-cups
