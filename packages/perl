#!/bin/bash

depends_on libgdbm ## opportunistic linking
depends_on libdb   ## opportunistic linking

fetch_source http://www.cpan.org/src/5.0/perl-5.43.7.tar.gz 38b243e1c1cb3cdd4cad63f3141612307a76d787

do_unpack
pushd_src
./Configure -des \
            -Dusedevel \
            -Dprefix=$PREFIX \
            -Accflags="$CPPFLAGS" \
            -Dusethreads
do_make
## a lot of stuff depends on perl, so it must pass all self checks
pushd_src
CI=true LC_ALL=C \
HARNESS_OPTIONS=j"$NUMJOBS" PERL_TEST_HARNESS_ASAP=1 \
make test_harness_notty
popd_src
do_install
popd
