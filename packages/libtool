#!/bin/bash

depends_on autoconf

unset EXTRALD
cc_addflags EXTRALD -Wl,--no-gc-sections

fetch_source http://ftpmirror.gnu.org/libtool/libtool-2.4.6.tar.gz 25b6931265230a06f0fc2146df64c04e5ae6ec33

do_unpack
LDFLAGS="$LDFLAGS $EXTRALD" \
do_compile --enable-shared --enable-static --with-shared --with-static \
                    --enable-ltdl-install
