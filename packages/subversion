#!/bin/bash

depends_on libapr
depends_on libaprutil
depends_on sqlite3
depends_on zlib
depends_on libserf # for HTTP
depends_on file    # specifically, libmagic
depends_on swig    # for perl bindings

fetch_source http://www.eu.apache.org/dist/subversion/subversion-1.9.0.tar.bz2 2ba78f59b3669e461ef6f56326426918100e2073

do_unpack
pushd_src
do_configure
do_make
do_install
do_make swig-pl-lib
do_make install-swig-pl-lib
cd subversion/bindings/swig/perl/native
perl Makefile.PL PREFIX="$PREFIX" LDFLAGS=override
do_install
popd_src
