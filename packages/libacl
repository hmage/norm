#!/bin/bash

[[ $OSTYPE == *linux* ]] && depends_on libattr

fetch_source http://download.savannah.gnu.org/releases/acl/acl-2.2.52.src.tar.gz 537dddc0ee7b6aa67960a3de2d36f1e2ff2059d9

do_unpack

pushd_src
do_configure --enable-gettext=no
do_make
do_test
do_install
make install-dev
make install-lib
popd
