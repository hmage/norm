#!/bin/bash

depends_on zlib ## opportunistic linking
depends_on xz ## opportunistic linking with liblzma

depends_on libgnutls ## don't replace with openssl because aria2 will fail to build otherwise, see bug https://github.com/aria2/aria2/issues/1198

fetch_source https://github.com/aria2/aria2/releases/download/release-1.34.0/aria2-1.34.0.tar.xz 7a804bc7b0788c90f2c62e9eb2249da96d84569b

CONFFLAGS=(
--without-libxml2 ## opportunistic linking
)

do_unpack_compile "${CONFFLAGS[@]}"
