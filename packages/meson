#!/bin/bash

depends_on python

fetch_source https://github.com/mesonbuild/meson/releases/download/1.10.1/meson-1.10.1.tar.gz b9f59df54f340b868535e23703ec237c22bf2c33

do_unpack
pushd_src
python3 setup.py build
python3 setup.py install --prefix="$PREFIX" --single-version-externally-managed --record="$PREFIX/var/norm/meson.install-record"
popd_src
