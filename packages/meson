#!/bin/bash

needs_tool python3

if ! python3 -c 'import setuptools'; then
    depends_on python ## system-provided python3 doesn't have setuptools
fi

fetch_source https://github.com/mesonbuild/meson/archive/0.62.1/meson-0.62.1.tar.gz 4ba6f57629e5f38ea7b82e6edcd2baa2ab9c1edb

do_unpack
pushd_src
python3 setup.py build
python3 setup.py install --prefix="$PREFIX"
popd_src
