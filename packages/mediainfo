#!/bin/bash

depends_on zlib

fetch_source https://mediaarea.net/download/binary/mediainfo/19.09/MediaInfo_CLI_19.09_GNU_FromSource.tar.xz 6c78da740362cb40aecb81480d4831dc2aa5f15e

do_unpack
OLD="$SRCDIR"
SRCDIR="$OLD/ZenLib/Project/GNU/Library"
do_compile
SRCDIR="$OLD/MediaInfoLib/Project/GNU/Library"
do_compile
SRCDIR="$OLD/MediaInfo/Project/GNU/CLI"
do_compile