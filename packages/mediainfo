#!/bin/bash

depends_on zlib

fetch_source https://mediaarea.net/download/binary/mediainfo/21.09/MediaInfo_CLI_21.09_GNU_FromSource.tar.xz 06d1fb8396b5e5dcb56d1902715abce962675ef1

do_unpack
OLD="$SRCDIR"
SRCDIR="$OLD/ZenLib/Project/GNU/Library"
do_compile
SRCDIR="$OLD/MediaInfoLib/Project/GNU/Library"
do_compile
SRCDIR="$OLD/MediaInfo/Project/GNU/CLI"
do_compile