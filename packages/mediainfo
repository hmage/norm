#!/bin/bash

depends_on zlib

fetch_source https://mediaarea.net/download/binary/mediainfo/20.03/MediaInfo_CLI_20.03_GNU_FromSource.tar.xz 295b0a857ae871612236a882de04783c1e6ef72f

do_unpack
OLD="$SRCDIR"
SRCDIR="$OLD/ZenLib/Project/GNU/Library"
do_compile
SRCDIR="$OLD/MediaInfoLib/Project/GNU/Library"
do_compile
SRCDIR="$OLD/MediaInfo/Project/GNU/CLI"
do_compile