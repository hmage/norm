#!/bin/bash

[[ $OSTYPE != *darwin* ]] && depends_on zlib ## for deflated chunks, osx provides the library

fetch_source https://mediaarea.net/download/binary/mediainfo/26.01/MediaInfo_CLI_26.01_GNU_FromSource.tar.xz 1ac5d144e3533d168fc6dda3c0d2762275ce6f48

do_unpack
OLD="$SRCDIR"
SRCDIR="$OLD/ZenLib/Project/GNU/Library"
do_compile
SRCDIR="$OLD/MediaInfoLib/Project/GNU/Library"
do_compile
SRCDIR="$OLD/MediaInfo/Project/GNU/CLI"
do_compile