#!/bin/bash

fetch_source http://deb.debian.org/debian/pool/main/m/moreutils/moreutils_0.63.orig.tar.xz 2abb0d000300418920173cf88118c2b98a11655a
fetch_debian http://deb.debian.org/debian/pool/main/m/moreutils/moreutils_0.63-1.debian.tar.xz 244bc683c7bdc9f67f9974625651f30eebb2b3a3

do_undebian
do_patch_inline -p0 << 'EOF'
--- Makefile
+++ Makefile
@@ -13,7 +13,7 @@
 
 DOCBOOK2XMAN=xsltproc --param man.authors.section.enabled 0 $(DOCBOOKXSL)/manpages/docbook.xsl
 
-all: $(BINS) $(MANS)
+all: $(BINS)
 
 clean:
 	rm -f $(BINS) $(MANS) dump.c errnos.h errno.o
@@ -28,8 +28,6 @@
 	$(INSTALL_BIN) $(BINS) $(DESTDIR)$(PREFIX)/bin
 	install $(PERLSCRIPTS) $(DESTDIR)$(PREFIX)/bin
 
-	mkdir -p $(DESTDIR)$(PREFIX)/share/man/man1
-	install $(MANS) $(DESTDIR)$(PREFIX)/share/man/man1
 
 check: isutf8
 	./is_utf8/test.sh
EOF
pushd_src
do_make DOCBOOKXSL="$PREFIX"/share/docbook-xsl
#do_test
do_install PREFIX="$PREFIX"
popd_src
