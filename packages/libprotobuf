#!/bin/bash

[[ $OSTYPE != *darwin* ]] && depends_on zlib ## enables GzipInputStream, osx provides the library
depends_on libabsl

fetch_source https://github.com/protocolbuffers/protobuf/releases/download/v33.5/protobuf-33.5.tar.gz 24f666eb4974e405581da5a174eb7f9113eb1241

do_unpack
pushd_src
do_cmake -Dprotobuf_BUILD_TESTS=OFF
find . -name flags.make -exec sed -ibak "s|-I$PREFIX/include ||g" {} +
do_make_and_install
popd_src
