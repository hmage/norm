#!/bin/bash

fetch_source http://deb.debian.org/debian/pool/main/e/ent/ent_1.2debian.orig.tar.gz f3ff843b3a346d1db2cd941ee0232492f9445845
fetch_debian http://deb.debian.org/debian/pool/main/e/ent/ent_1.2debian-3.debian.tar.xz 26218c1149bb81f2c553ee46749e1ec78f9a5afc

do_undebian
pushd_src
sed -i.bak 's/ent\.1//;s/-Wl,-z,now//' Makefile
do_make ent
do_test
mkdir -p "$PREFIX/bin"
install -m755 ent $PREFIX/bin/ent
popd_src
