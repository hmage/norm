#!/bin/bash

depends_on pkg-config ## to find libraries
depends_on libgdbm    ## _gdbm module
depends_on libncurses ## curses module
depends_on openssl    ## ssl module
depends_on xz         ## lzma module

if [[ $OSTYPE != *darwin* ]]; then
	depends_on zlib        ## zlib module, osx provides the library
	depends_on sqlite3     ## sqlite3 module, osx provides the library
	depends_on bzip2       ## _bz2 module, osx provides the library
	depends_on libffi      ## _ctypes module, osx provides the library
	depends_on libuuid     ## _uuid module, osx apparently provides one
	depends_on libreadline ## readline module, osx apparently provides one
fi

fetch_source https://www.python.org/ftp/python/3.14.3/Python-3.14.3.tar.xz 83eed62ba54742382542474db798717e6ee6b3f2

CONFFLAGS=(
--enable-shared              ## otherwise python extensions fail to load
--with-dbmliborder=gdbm:ndbm ## prefer our gdbm to other dbm
--enable-optimizations
#--with-system-ffi
#--with-readline=edit
)

do_unpack

## Python 3.14: ensure configure points to our ncurses headers
sed -i.bak "s|-I/usr/include/ncursesw|-I$ESCAPED_PREFIX/include/ncursesw|" "$SRCDIR/configure"

## build breaks with parallel or Ofast
NOPARALLEL=1 \
CFLAGS="${CFLAGS/-Ofast/}" \
CXXFLAGS="${CXXFLAGS/-Ofast/}" \
do_compile "${CONFFLAGS[@]}"

## small sanity check
MODULES=(
_asyncio _bisect _blake2 _bz2 _codecs_cn _codecs_hk _codecs_iso2022 _codecs_jp _codecs_kr _codecs_tw _contextvars
_csv _ctypes _ctypes_test _curses _curses_panel _datetime _dbm _decimal _elementtree _gdbm _hashlib _heapq _hmac
_interpchannels _interpreters _interpqueues _json _lsprof _lzma _md5 _multibytecodec _multiprocessing _opcode
_pickle _posixshmem _posixsubprocess _queue _random _sha1 _sha2 _sha3 _socket _sqlite3 _ssl _statistics _struct
_testbuffer _testcapi _testimportmultiple _testinternalcapi _testmultiphase _uuid _xxtestfuzz _zoneinfo array
binascii cmath fcntl grp hashlib hmac math mmap pyexpat readline resource select ssl syslog termios unicodedata
xxlimited xxlimited_35 zlib
)
for i in "${MODULES[@]}"; do
	"$PREFIX/bin/python3" -c "import $i"
done
"$PREFIX/bin/python3" - <<'PY'
import _hashlib
import _ssl
import hashlib
import hmac

## _crypt was removed in Python 3.13; validate OpenSSL-backed hashing directly instead
assert hasattr(_hashlib, "openssl_sha256")
assert _ssl.OPENSSL_VERSION.startswith("OpenSSL ")
assert len(hashlib.sha256(b"norm").hexdigest()) == 64
assert len(hmac.digest(b"k", b"norm", "sha256")) == 32
PY
"$PREFIX/bin/python3" -m venv "$SRCDIR/temp/venvtest"

## Python 3.14+ no longer bundles setuptools by default; install it for setup.py/PEP517 formulas.
fetch_source https://files.pythonhosted.org/packages/82/f3/748f4d6f65d1756b9ae577f329c951cda23fb900e4de9f70900ced962085/setuptools-82.0.0.tar.gz 55aa6a1d86e8d5a831f60eedeba82006808c7a0e
do_unpack
pushd_src
"$PREFIX/bin/python3" setup.py install --prefix="$PREFIX" --single-version-externally-managed --record="$PREFIX/var/norm/python-setuptools.install-record"
popd_src

## default python is now python3 everywhere
ln -sf "$PREFIX/bin/python3" "$PREFIX/bin/python"
