#!/bin/bash

[[ $OSTYPE != *darwin* ]] && depends_on zlib ## osx gurantees to provide one, opportunistic linking on other systems
[[ $OSTYPE != *darwin* ]] && depends_on curl ## for https, but on osx it will use system framework

depends_on libexpat ## opportunistic linking

fetch_source https://www.kernel.org/pub/software/scm/git/git-2.36.0.tar.xz 142688f8a87ebee5b11e4d0a2e1eb0de8d4d8a51
fetch_file https://www.kernel.org/pub/software/scm/git/git-manpages-2.36.0.tar.xz 6d67ff13fb58fa7acc003104978c98062f321a87

OPTIONS=(
NO_GETTEXT=1 ## if it detects gettext headers, it assumes msgfmt tool is installed, which is not always the case
NO_TCLTK=1   ## build failure if tcl is not installed
V=1          ## verbose logging for easier debugging of user reports
)

do_unpack
pushd_src
do_auto_configure
NEEDV1=1 do_make_and_install "${OPTIONS[@]}"
popd_src

## install bash completion
mkdir -p "$PREFIX/etc/bash_completion.d"
install "$SRCDIR/contrib/completion/git-completion.bash" "$PREFIX/etc/bash_completion.d/git-completion.bash"

## install git manpages
mkdir -p "$PREFIX/share/man"
cat "$CACHEDIR/$FILENAME" | xz -d | tar xf - -C "$PREFIX/share/man"
