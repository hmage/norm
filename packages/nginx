#!/bin/bash

depends_on libpcre
depends_on zlib ## opportunistic linking

fetch_source https://nginx.org/download/nginx-1.29.5.tar.gz 025c9ab406fcae46aaa6d752b299d5af16b6b1bb

CONFFLAGS=(
--with-cc-opt="$CPPFLAGS"
--with-ld-opt="$LDFLAGS"
--without-pcre2 ## opportunistic linking
)

do_unpack_compile "${CONFFLAGS[@]}"
