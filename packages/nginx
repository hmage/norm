#!/bin/bash

depends_on libpcre
depends_on zlib ## opportunistic linking

fetch_source https://nginx.org/download/nginx-1.28.2.tar.gz a36b81892d2c5f50e8bc8974cd6cb8dec0810e28

CONFFLAGS=(
--with-cc-opt="$CPPFLAGS"
--with-ld-opt="$LDFLAGS"
--without-pcre2 ## opportunistic linking
)

do_unpack_compile "${CONFFLAGS[@]}"
